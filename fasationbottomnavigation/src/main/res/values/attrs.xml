<resources>

    <declare-styleable name="FasationBottomNavigation">

        <attr name="fasation_background_color" format="color" />
        <attr name="fasation_height" format="dimension" />

        <!--normal icon size when show icon and text together-->
        <attr name="fasation_normal_active_item_icon_mix_size" format="dimension" />
        <attr name="fasation_normal_inactive_item_icon_mix_size" format="dimension" />

        <!--normal icon size when show icon without text-->
        <attr name="fasation_normal_active_item_icon_only_size" format="dimension" />
        <attr name="fasation_normal_inactive_item_icon_only_size" format="dimension" />

        <attr name="fasation_active_item_background_color" format="color" />
        <attr name="fasation_inactive_item_background_color" format="color" />

        <attr name="fasation_active_item_icon_color" format="color" />
        <attr name="fasation_inactive_item_icon_color" format="color" />

        <attr name="fasation_item_text_size" format="dimension" />

    </declare-styleable>

</resources>