<resources>

    <declare-styleable name="FasationEditText">

        <attr name="secure_password_drawable" format="reference" />
        <attr name="un_secure_password_drawable" format="reference" />
        <attr name="right_drawable" format="reference" />
        <attr name="clear_action_drawable" format="reference" />
        <attr name="android:text" format="string" />
        <attr name="android:hint" format="string" />
        <attr name="text_height" format="dimension" />
        <attr name="text_size" format="dimension" />
        <attr name="hint_size" format="dimension" />
        <attr name="right_drawable_space" format="boolean" />
        <attr name="text_color" format="color" />
        <attr name="normal_color" format="color" />
        <attr name="active_color" format="color" />
        <attr name="valid_color" format="color" />
        <attr name="invalid_color" format="color" />
        <attr name="description_text" format="string" />
        <attr name="description_text_color" format="color" />
        <attr name="description_text_size" format="dimension" />
        <attr name="description_text_font" format="string" />
        <attr name="border_width" format="dimension" />
        <attr name="clear_action_position" format="enum" >
            <enum name="Left" value="0" />
            <enum name="Right" value="1" />
        </attr>
        <attr name="android:inputType"/>
        <attr name="status" format="enum">
            <enum name="Normal" value="0" />
            <enum name="Active" value="1" />
            <enum name="Valid" value="2" />
            <enum name="Invalid" value="3" />
        </attr>

    </declare-styleable>

</resources>